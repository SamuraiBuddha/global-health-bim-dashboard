{
  "name": "global-health-bim-dashboard",
  "version": "0.1.0",
  "description": "Integrated 3D visualization platform for global health and infrastructure monitoring",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:services\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:services": "cd services && npm run dev",
    "build": "npm run build:frontend && npm run build:services && npm run build:rust",
    "build:frontend": "cd frontend && npm run build",
    "build:services": "cd services && npm run build",
    "build:rust": "cd rust-core && cargo build --release",
    "test": "npm run test:frontend && npm run test:services && npm run test:rust",
    "test:frontend": "cd frontend && npm test",
    "test:services": "cd services && npm test",
    "test:rust": "cd rust-core && cargo test",
    "db:migrate": "cd data && npm run migrate",
    "db:seed": "cd data && npm run seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "bim",
    "visualization",
    "geospatial",
    "monitoring",
    "dashboard"
  ],
  "author": "Jordan Paul Ehrig",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}